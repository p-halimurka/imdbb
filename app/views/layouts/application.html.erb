<!DOCTYPE html>
<html>
  <head>
    <title>IMDb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "IMDb" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "IMDb" %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="/assets/jquery.js" type="text/javascript"></script>
    <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% flash.each do |key, message| %>
        <div class="alert <%= flash_class(key) %> alert-dismissible fade show text-center" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"></span>
          </button>
        </div>
      <% end %>

    <%= render 'shared/navbar' %>

     <div class="section">
      <div class="container is-fluid pr-0-mobile pl-0-mobile">
        <%= yield %>
      </div>
    </div>
    
  </body>
</html>

<% @movies.each do | movie | %>
  <div class="row"> 
      <div class="col">
          <span></span>
      </div>
      <div class="col-9">
          <article class="media">
            <figure class="media-left">
              <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png">
              </p>
            </figure>
            <h5> <%= link_to "#{movie.title}", movie_path(movie) %> </h5> <small>2h 31m </small>
            <small> | </small> 
            <small> <% movie.categories.each do | category |%>
                      <%= link_to "#{category.name}", category_path(category) %>
                    <% end %>
            </small>
            <br>
            <p> <%= movie.description %> </p>
            <small><strong> IMDb rating </strong></small>
            <p> <%= rating_for movie, 'rating_value', star: 10, disable_after_rate: false %></p>
          </article>
          <hr class="my-4">
          <br>
       </div>

        <div class="col">
          <span></span>
      </div>
      
    </div>
<% end %>